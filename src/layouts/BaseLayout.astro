---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  path?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  path = '/',
  noindex = false,
} = Astro.props;

const SITE_URL = 'https://nexuit.app';
const canonicalUrl = new URL(path, SITE_URL).toString();
const socialImageUrl = new URL('/og-image.svg', SITE_URL).toString();
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="theme-color" content="#171717" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" sizes="any" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Nexuit" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={socialImageUrl} />
    <meta property="og:image:alt" content="Vista previa de la landing de Nexuit" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageUrl} />

    {noindex && <meta name="robots" content="noindex, nofollow" />}
  </head>

  <body class="site-shell grain-overlay">
    <slot />
  </body>
</html>
