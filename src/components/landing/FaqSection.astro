---
interface FaqItem {
  q: string;
  a: string;
}

interface Props {
  appUrl: string;
  primaryCtaClass: string;
  secondaryCtaClass: string;
  faqs: FaqItem[];
}

const { appUrl, primaryCtaClass, secondaryCtaClass, faqs } = Astro.props;
---

<section id="faq" class="mx-auto max-w-6xl px-4 py-14">
  <div class="text-xs font-semibold uppercase tracking-[0.2em] text-[color:var(--brand)]">Objeciones comunes</div>
  <h2 class="mt-3 text-3xl font-semibold tracking-tight text-[color:var(--ink)] md:text-4xl">FAQ</h2>

  <div class="mt-8 grid gap-4 md:grid-cols-2">
    {faqs.map((faq) => (
      <details class="glass-card rounded-[1.75rem] p-6">
        <summary class="cursor-pointer text-sm font-semibold text-[color:var(--ink)]">{faq.q}</summary>
        <p class="mt-3 text-sm leading-7 text-[color:var(--muted)]">{faq.a}</p>
      </details>
    ))}
  </div>

  <div class="mt-10 rounded-[2rem] border border-[color:var(--line)] bg-[rgba(255,255,255,0.92)] p-8 shadow-[0_18px_40px_rgba(15,23,42,0.08)]">
    <h3 class="text-2xl font-semibold tracking-tight text-[color:var(--ink)]">¿Listo para ordenar tu operación base?</h3>
    <p class="mt-3 max-w-2xl text-sm leading-7 text-[color:var(--muted)]">
      Entra a Nexuit y arranca con Inventario + Productos. Si hoy operas con hojas sueltas o
      sistemas desconectados, este es el punto donde empiezas a trabajar con una sola fuente de
      verdad.
    </p>
    <div class="mt-5 flex flex-col gap-3 sm:flex-row">
      <a href={appUrl} class={primaryCtaClass} rel="noopener noreferrer">
        Acceder a Nexuit
      </a>
      <a href="#producto" class={secondaryCtaClass}>
        Ver el problema que resuelve
      </a>
    </div>
  </div>
</section>
