---
interface Props {
  appUrl: string;
  primaryCtaClass: string;
  secondaryCtaClass: string;
}

const { appUrl, primaryCtaClass, secondaryCtaClass } = Astro.props;
---

<section class="mx-auto max-w-6xl px-4 pb-16 pt-12 md:pt-20">
  <div class="grid items-center gap-10 md:grid-cols-2">
    <div>
      <div class="mb-5 inline-flex items-center gap-2 rounded-full border border-[color:var(--line)] bg-[rgba(255,251,245,0.78)] px-4 py-1.5 text-[11px] tracking-[0.2em] text-[color:var(--muted)] uppercase">
        <span class="font-semibold text-[color:var(--brand)]">Nexuit Core</span>
        <span class="text-[color:var(--accent)]">•</span>
        <span>Inventario + Productos</span>
      </div>

      <h1 class="max-w-xl text-5xl font-semibold leading-[0.95] tracking-tight text-[color:var(--ink)] md:text-7xl">
        El núcleo modular para controlar inventario y catálogo sin caos
      </h1>

      <p class="mt-5 max-w-xl text-base leading-8 text-[color:var(--muted)] md:text-lg">
        Gestiona productos con variantes (tallas/colores), stock por almacén y movimientos auditables.
        Y cuando estés listo, activa POS, fabricación, tienda online y marketplace sobre la misma base.
      </p>

      <div class="mt-6 flex flex-col gap-3 sm:flex-row">
        <a href={appUrl} class={primaryCtaClass} rel="noopener noreferrer">
          Acceder a Nexuit
        </a>

        <a href="#como-funciona" class={secondaryCtaClass}>
          Ver cómo funciona
        </a>
      </div>

      <div class="mt-6 flex flex-wrap gap-2">
        <span class="rounded-full border border-[color:var(--line)] bg-[rgba(255,251,245,0.72)] px-3 py-1 text-xs text-[color:var(--muted)]">Variantes reales + SKUs</span>
        <span class="rounded-full border border-[color:var(--line)] bg-[rgba(255,251,245,0.72)] px-3 py-1 text-xs text-[color:var(--muted)]">Inventario por ubicación</span>
        <span class="rounded-full border border-[color:var(--line)] bg-[rgba(255,251,245,0.72)] px-3 py-1 text-xs text-[color:var(--muted)]">Movimientos auditables</span>
        <span class="rounded-full border border-[color:var(--line)] bg-[rgba(255,251,245,0.72)] px-3 py-1 text-xs text-[color:var(--muted)]">Multi-negocio (multi-tenant)</span>
      </div>
    </div>

    <div class="glass-card rounded-[2rem] p-5 md:rotate-[1deg]">
      <div class="flex items-center justify-between border-b border-[color:var(--line)] pb-4">
        <div>
          <div class="text-xs uppercase tracking-[0.2em] text-[color:var(--muted)]">Vista general</div>
          <div class="mt-1 text-sm font-semibold text-[color:var(--ink)]">Dashboard</div>
        </div>
        <div class="rounded-full bg-[rgba(23,76,69,0.08)] px-3 py-1 text-xs font-medium text-[color:var(--brand)]">Nexuit Core</div>
      </div>

      <div class="mt-4 grid gap-3 md:grid-cols-2">
        <div class="rounded-3xl border border-[color:var(--line)] bg-[rgba(255,255,255,0.45)] p-4">
          <div class="text-xs uppercase tracking-[0.18em] text-[color:var(--muted)]">Existencias</div>
          <div class="mt-1 text-sm font-semibold text-[color:var(--ink)]">Por almacén</div>
          <div class="mt-3 space-y-2">
            <div class="flex justify-between text-xs"><span class="text-[color:var(--muted)]">Bodega</span><span class="font-semibold text-[color:var(--ink)]">124</span></div>
            <div class="flex justify-between text-xs"><span class="text-[color:var(--muted)]">Sucursal</span><span class="font-semibold text-[color:var(--ink)]">58</span></div>
            <div class="flex justify-between text-xs"><span class="text-[color:var(--muted)]">Reservado</span><span class="font-semibold text-[color:var(--ink)]">12</span></div>
          </div>
        </div>

        <div class="rounded-3xl border border-[color:var(--line)] bg-[rgba(255,255,255,0.45)] p-4">
          <div class="text-xs uppercase tracking-[0.18em] text-[color:var(--muted)]">Variantes</div>
          <div class="mt-1 text-sm font-semibold text-[color:var(--ink)]">Talla / Color</div>
          <div class="mt-3 space-y-2">
            <div class="flex justify-between text-xs"><span class="text-[color:var(--muted)]">S • Negro</span><span class="font-semibold text-[color:var(--ink)]">SKU-001</span></div>
            <div class="flex justify-between text-xs"><span class="text-[color:var(--muted)]">M • Negro</span><span class="font-semibold text-[color:var(--ink)]">SKU-002</span></div>
            <div class="flex justify-between text-xs"><span class="text-[color:var(--muted)]">L • Negro</span><span class="font-semibold text-[color:var(--ink)]">SKU-003</span></div>
          </div>
        </div>

        <div class="rounded-3xl border border-[color:var(--line)] bg-[rgba(255,255,255,0.45)] p-4 md:col-span-2">
          <div class="text-xs uppercase tracking-[0.18em] text-[color:var(--muted)]">Movimientos recientes</div>
          <div class="mt-1 text-sm font-semibold text-[color:var(--ink)]">Historial auditable</div>
          <div class="mt-3 space-y-2">
            <div class="flex items-center justify-between rounded-2xl bg-[rgba(23,76,69,0.08)] px-3 py-2 text-xs">
              <span class="text-[color:var(--ink)]">Entrada • Bodega</span><span class="font-semibold text-[color:var(--brand)]">+20</span>
            </div>
            <div class="flex items-center justify-between rounded-2xl bg-[rgba(183,121,47,0.08)] px-3 py-2 text-xs">
              <span class="text-[color:var(--ink)]">Transferencia • Bodega → Sucursal</span><span class="font-semibold text-[color:var(--accent)]">-10</span>
            </div>
            <div class="flex items-center justify-between rounded-2xl bg-[rgba(26,23,18,0.06)] px-3 py-2 text-xs">
              <span class="text-[color:var(--ink)]">Ajuste • Sucursal</span><span class="font-semibold text-[color:var(--ink)]">-2</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
